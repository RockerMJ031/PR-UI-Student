# 服务器配置
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:8001

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/student_system

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
EMERGENCY_EMAIL=emergency@yourdomain.com

# Twilio短信服务配置
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Web Push通知配置
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# 安全配置
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret

# 第三方API配置
PAYMENT_GATEWAY_API_KEY=your-payment-api-key
PAYMENT_GATEWAY_SECRET=your-payment-secret

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis配置（如果使用Redis作为缓存）
REDIS_URL=redis://localhost:6379

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090

# 开发环境特定配置
DEBUG=true
VERBOSE_LOGGING=true